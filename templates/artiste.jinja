{% extends 'layout.html' %}

{% block navbar %}
  <nav>
        <ul class="flex border-b mt-5 text-xl">
            <li class="mr-1 ml-10">
              <a class="bg-white inline-block py-2 px-4 text-blue-500 hover:text-blue-800 font-semibold" href="/index">Chinook</a>
            </li>
            <li class="-mb-px mr-1">
              <a class="bg-white inline-block border-l border-t border-r rounded-t py-2 px-4 text-blue-700 font-semibold" href="/artistes">Artistes</a>
            </li>
            <li class="mr-1">
              <a class="bg-white inline-block py-2 px-4 text-blue-500 hover:text-blue-800 font-semibold" href="/albums">Albums</a>
            </li>
            <li class="mr-1">
              <a class="bg-white inline-block py-2 px-4 text-gray-400 font-semibold" href="#">Panier</a>
            </li>
        </ul>
    </nav>
{% endblock %}

{% block entete %}
  {{ nomArtiste }}
{% endblock %}

{% block contenu %}
    <div class="container">
      <div class="row">
        {% for album in albums %}
          <div class="col-md-1"></div>
          <div class="card" style="width: 10rem;">
            <img class="card-img-top" src="https://picsum.photos/200/300?random={{(loop.index)%3}}" alt="Card image cap">
            <div class="card-body">
              <h5 class="card-title"><a href="/album?album={{ album['Title'] }}&artiste={{ nomArtiste }}">{{ album['Title'] }}</a></h5>
              <!--<p class="card-text"></p>-->
              <a href="/album?album={{ album['Title'] }}&artiste={{ nomArtiste }}" class="btn btn-primary">Check it</a>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
{% endblock %}